<div class="container">
  <div class="row">
    <div class="col">
      <h1>Create a new task</h1>
      <%= form_for(@task) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :details %>
        <%= f.text_field :details %>
        <%= f.submit %>
      <% end %>
      <%= link_to "Back to the list", tasks_path %>
    </div>
  </div>
</div>
